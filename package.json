{
  "name": "avalanche-disaster-relief-network",
  "version": "1.0.0",
  "description": "Blockchain-powered disaster relief micro-funding network on Avalanche",
  "private": true,
  "scripts": {
    "dev": "./scripts/integration-setup.sh",
    "start": "./scripts/integration-setup.sh",
    "stop": "./scripts/stop-services.sh",
    "logs": "./scripts/view-logs.sh",
    "test": "./scripts/test-integration.sh",
    "test:health": "./scripts/test-integration.sh health",
    "test:api": "./scripts/test-integration.sh api",
    "test:frontend": "./scripts/test-integration.sh frontend",
    "setup": "npm run dev",
    "clean": "rm -rf .backend.pid .frontend.pid",
    "install:all": "npm install && cd backend/api-server && npm install && cd ../../frontend && npm install",
    "build": "cd frontend && npm run build",
    "build:backend": "cd backend/api-server && npm run build",
    "lint": "cd frontend && npm run lint",
    "lint:backend": "cd backend/api-server && npm run lint"
  },
  "keywords": [
    "avalanche",
    "blockchain",
    "disaster-relief",
    "defi",
    "micro-funding",
    "react",
    "nodejs",
    "express"
  ],
  "author": "Avalanche Team 1",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/avalanche-disaster-relief.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/avalanche-disaster-relief/issues"
  },
  "homepage": "https://github.com/your-org/avalanche-disaster-relief#readme",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "backend/api-server"
  ],
  "dependencies": {
    "postgres": "^3.4.7"
  }
}
